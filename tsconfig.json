{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2017",

    // Strict Configurations
    // "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    // "noImplicitAny" : true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false, //true,
    "noUnusedParameters": true,
    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
